@{
  ViewData["Title"] = "Report";
  ViewData["Styles"] = "~/css/report.css";
  ViewData["Scripts"] = "~/js/report.js";
  Layout = "~/Views/Shared/_UserLayout.cshtml";

}

<div class="main-container">
  <div class="content">
    <!-- Left side -->
    <div class="left-side">
      <!-- Address -->
      <div class="address details">
        <i class="fas fa-map-marker-alt"></i>
        <div class="topic">Location</div>
        <div class="text-one">King Mongkut's Institute of Technology Ladkrabang</div>
        <div class="text-two">1 Soi Chalongkrung 1, Lat Krabang, Bangkok 10520</div>
      </div>
      <!-- Phone -->
      <div class="phone details">
        <i class="fas fa-phone-alt"></i>
        <div class="topic">Phone</div>
        <div class="text-one">0946372853</div>
      </div>
      <!-- Email -->
      <div class="email details">
        <i class="fas fa-envelope"></i>
        <div class="topic">Email</div>
        <div class="text-one">teeruth@gmail.com</div>
      </div>
    </div>
    <!-- Rigth side -->
    <div class="right-side">
      <div class="topic-text">Contact Us</div>
      <p>Wheather you have a question or problem about features, usage, or anything else, our team is ready to answer
        all your questions.</p>
      <form id="contactForm" action="#">
        <div class="input-box name-box">
          <input id="name" type="text" name="name" placeholder="Title">
        </div>
        <div class="input-box message-box">
          <textarea id="subject" name="subject" placeholder="Write something.." style="height:150px"></textarea>
          <!-- <span id="charCount"></span> -->
        </div>
        <div class="button">
          <button type="submit" class="btn btn-secondary btn-secondary__light" id="sendMessageBtn">Send Message</button>
        </div>
      </form>
    </div>
  </div>
</div>
