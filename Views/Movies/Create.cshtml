@{
    ViewData["Title"] = "Add Movies";
    ViewData["Styles"] = "~/css/addMovies.css";
    ViewData["Scripts"] = "~/js/addMovies.js";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="movie-container">
    <div class="movie-title">
        <label>Movie Title</label>
        <input type="text" id="movie-title" placeholder="type movie title">
    </div>
    <div class="preview-image">
        @* background image *@
    </div>
    <div class="movie-image">
        <label>Movie Image</label>
        <input type="file" id="movie-image" accept="image/jpeg, image/png, image/jpg">
    </div>
    <div class="movie-description">
        <label>Movie Description</label>
        <textarea id="movie-description" placeholder="type some description"></textarea>
    </div>

    <div class="add-date-container">
        <button type="button" title="add-date-btn" class="add-date"><i class="fa-solid fa-plus"></i></button>
        @* <div class="new-date">
        <label>Select Date</label>
        <input type="date" id="date" value="@DateTime.Now.ToString("yyyy-MM-dd")">
        <div class="submit-date-btn">
        <button class="cancel-date">Cancel</button>
        <button class="submit-date">Submit</button>
        </div>
        </div> *@
    </div>
    <div class="date-horizontal-wrapper">
        <i class="fa-solid fa-chevron-left"></i>
        <div class="date-horizontal">
            @* <div class="date-container">
            <p>@DateTime.Now.DayOfWeek</p>
            <p>@DateTime.Now.ToString("dd MMMM yyyy")</p>
            <div class="ellipsis-container">
            <i class="fa-solid fa-ellipsis-vertical"></i>
            <div class="ellipsis-content">
            <button class="edit-date">Edit</button>
            <button class="delete-date">Delete</button>
            </div>
            </div>
            </div> *@
        </div>
        <i class="fa-solid fa-chevron-right"></i>
    </div>
    <div class="cinema-showtime">
        <div class="cinema-container">
            <div class="cinema-name">
                <h2>Mega Cineplex</h2>
            </div>
            <div class="showtime">
                <div class="add-showtime-container">
                    <div class="add-showtime-title">
                        <p>Add Showtime</p>
                        <button type="button" title="add-showtime-btn" class="add-showtime"><i
                                class="fa-solid fa-plus"></i></button>
                    </div>
                    <div class="add-showtime-input-container">
                        <div class="add-showtime-input">
                            <label>Select a Time</label>
                            <input type="time" id="showtime" value="@DateTime.Now.ToString("HH:mm")">
                        </div>
                        <div class="add-showtime-submit">
                            <button class="cancel-showtime">Cancel</button>
                            <button class="submit-showtime">Submit</button>
                        </div>
                    </div>
                </div>
                <div class="showtime-container">
